@{
    Layout = "_Layout";
}

@if (@Model.Count == 0)
{
    <h3>No Clients have been added yet!</h3>
}

@if (@Model.Count != 0)
{
    <h2>All Clients:</h2>
}
    <ul>
    @foreach (var client in Model)
    {
        <li><a href="/clients/@client.GetId()">@client.GetName()</li>
    }

<p><a href="/clients/new/@Model">Add New Client</a></p>
