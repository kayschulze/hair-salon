@{
    Layout = "_Layout";
}

@if (@Model.Count == 0)
{
    <h3>No Clients have been added yet!</h3>
}

@if (@Model.Count != 0)
{
    <h2>All Clients:</h2>
}
    <ul>
    @foreach (var client in Model)
    {
        <li><h2><a href="/clients/@client.GetId()">@client.GetName()</a></h2></li>
        <li><a href="/clients/delete/@client.GetId()">Delete @client.GetName() as Client</a></li>
    }
    </ul>
